<h1>New Viewing Party</h1>

<h3> Details </h3>
<b> Movie: <%= @facade.movie.title %>

<%= form_with url: user_movie_viewing_parties_path(@user, @facade.movie.id), local: true do |f| %>
  <p><%= f.label :duration, 'Duration of Party (mins)' %></p>
  <p><%= f.number_field :duration, value: @facade.movie.runtime, min: @facade.movie.runtime %></p>

  <p><%= f.label :date, 'Date' %></p>
  <p><%= f.date_field :date %></p>

  <p><%= f.label :start_time, 'Start Time' %></p>
  <p><%= f.time_field :start_time %></p>

     <%= f.submit "Create Viewing Party" %>
<% end %>